  <fieldset id="dsv-legend">
    <legend>Severity Legend:</legend>
    <% @severities.each do |severity| %>
      <div id="dsv-<%= severity[:slug] %>" class="dsv" title="<%= severity[:description] %>" data-color="#ff0000" >
        <div class="dsv-threshold dsv-<%= severity[:slug] %>"></div>
        <label><%= severity[:name] %><span class="more-information"> ? </span></label>
      </div>
    <% end %>
  </fieldset>
